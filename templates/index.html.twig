{% extends 'base.html.twig' %}

{% block body %}
 <div class="container">
      <header>
        <h1>TO-DO LIST</h1>
      </header>
      <form method="POST" action="{{path('createTask')}}">
        <input name="inputTodo" type="text" class="todo-input">
        <button type="submit" class="todo-button">
        <i class="fas fa-plus"></i>
        </button>
      </form>
      <div class="todo-box">
        <ul class="todo-list">
        {% for todo in todos %}
              <li {% if todo.status %} class='done todo todo-item' {% else %} class='todo todo-item' {% endif %}>
                  <a href="{{path('moveTodo', {'id': todo.id})}}" class="aTask">{{ todo.title }}</a>
                  <a class='del-button' href="{{path('deleteTodo', {'id': todo.id})}}">
                  <i class="fas fa-trash-alt"></i></a>
              </li>
        {% endfor %}
        </ul>
      </div>
</div>
{% endblock %}